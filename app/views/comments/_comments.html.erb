<hr>
<h2><%= Comment.model_name.human %></h2>
<% if commentable.comments.empty? %>
  <p><%= t('views.common.nothing', name: Comment.model_name.human) %></p>
<% else %>
  <% commentable.comments.each do |comment| %>
    <p>
      <%= comment.content %><br>
      <%= l comment.created_at, format: :long %> | <%= comment.user.name.presence || comment.user.email %>
    </p>
  <% end %>
<% end %>
<%= form_with model: [commentable, Comment.new] do |f| %>
  <%= f.text_field :content, required: true %> <%= f.submit %>
<% end %>
<p id="notice"><%= notice %></p>

<h1><%= Report.model_name.human %></h1>

<table>
  <thead>
    <tr>
      <th><%= Report.human_attribute_name(:date) %></th>
      <th><%= Report.human_attribute_name(:title) %></th>
      <th><%= Report.human_attribute_name(:content) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= l report.created_at.to_date %></td>
        <td><%= report.title %></td>
        <td><%= report.content %></td>
        <td><%= link_to t('views.common.show'), report %></td>
        <td><%= link_to t('views.common.edit'), edit_report_path(report) if report.user == current_user %></td>
        <td><%= link_to t('views.common.destroy'), report, method: :delete, data: { confirm: t('views.common.delete_confirm') } if report.user == current_user %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('views.common.new'), new_report_path %>
